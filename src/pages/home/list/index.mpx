        }
      ]
    },
    mounted () {
      console.log(this.listData)
    },
    methods: {
      clickNotice (item, index) {
        if (index === 0) {
          wx.navigateTo({ url: '/pages/wuyifengbei/index' })
        } else if (index === 1) {
          wx.navigateTo({ url: '/pages/laoyemiao/index' })
        }
      }
    }
  })
</script>

