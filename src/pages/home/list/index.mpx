  <view class="home-list">
    <view
      wx:for="{{listData}}"
      wx:key="index"
      catchtap="clickNotice(item,index)"
      class="item"
    >
      <h3 class="title">{{ item.title }}</h3>
      <image src="{{ item.image }}" class="bg" />
    </view>
  </view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'

  createComponent({
    data: {
      listData: [
